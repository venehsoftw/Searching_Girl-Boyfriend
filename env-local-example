# App
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# WorldChain API
NEXT_PUBLIC_WORLDCHAIN_URL=https://api.worldchain.example.com/v1
WORLDCHAIN_API_KEY=your-worldchain-api-key
NEXT_PUBLIC_WORLDCHAIN_CLIENT_ID=your-worldchain-client-id

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/worldchain_db

# Email Service
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-smtp-username
EMAIL_SERVER_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@worldchain-app.com

# Storage
STORAGE_BUCKET=worldchain-app.storage.googleapis.com
STORAGE_KEY=your-storage-access-key

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_VENDOR_VERIFICATION=true
